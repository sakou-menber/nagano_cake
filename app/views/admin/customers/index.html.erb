<div class="container">
  <div class= "row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h4>会員一覧</h4>
    </div>
  </div>
</div>


<div class= "row">

  <div class="col-sm-10 px-sm-0 mx-auto mb-5">
 　<table class="col-sm-10 px-sm-0 mx-auto mb-5">
    <thead class= "table-secondary">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <%  @customers.each do |customer| %>
     <tr>
       <td class="align-middle"><%= customer.id %></td>
       <td class="align-middle"><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
       <td class="align-middle"><%= customer.email %></td>
       <td>
         <% if customer.is_deleted == false %>
          <b> <font color="$teal-300">有効</font></b>
         <% else %>
           <p>退会</p>
         <% end %>
      </td>
     </tr>
    <% end %>

   </table>
   <%= paginate @customers %>
  </div>
</div>
