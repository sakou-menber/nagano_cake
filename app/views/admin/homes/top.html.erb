<div class="container">
  <div class= "row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h4>注文履歴一覧</h4>
    </div>
  </div>
</div>
<div class= "row">

  <div class="col-sm-10 px-sm-0 mx-auto mb-5">
   <table class="col-sm-10 px-sm-0 mx-auto mb-5">
    <thead class= "table-secondary">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
      </tr>
    </thead>
<% @orders.each do |order| %>
 <tr>
   <td class="align-middle"><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
   <td class="align-middle"><%= order.shipping_name %></td>
   <td class="align-middle"><%= order.item_amount %></td>
</tr>

<% end %>

<%= paginate @orders %>

