<div class="container">
  <div class= "row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h4>商品一覧</h4>
    </div>
  </div>
</div>

<div class="col-sm-2 px-sm-0 text-right mb-2">
      <%= link_to new_admin_item_path, class:"btn btn--circle btn--circle-c btn--shadow" do %>
        <i class="fas fa-plus"></i>
      <% end %>
</div>

<div class= "row">

  <div class="col-sm-10 px-sm-0 mx-auto mb-5">
 　<table class="col-sm-10 px-sm-0 mx-auto mb-5">
    <thead class= "table-secondary">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
      </tr>
    </thead>
    <% @items.each do |item| %>
     <tr>
       <td class="align-middle"><%= item.id %></td>
       <td class="align-middle"><%= link_to item.name, admin_item_path(item) %></td>
       <td class="align-middle"><%= item.price %>
     </tr>
    <% end %>
   </table>
  </div>
 <%= paginate @items %>
</div>




