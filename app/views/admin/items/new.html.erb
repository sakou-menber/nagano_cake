<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
        <h3>商品新規登録画面</h3>
    </div>
  </div>

  <div class= "row">
    <div class="row my-3">
      <%= form_with model: @item do |f| %>
       <table>
         <tr>
           <div class = "form-group">
             <th><%= f.label :商品画像 %></th>
             <th><%= f.file_field :image %></th>
           </div>
          </tr>
          <tr>
           <div class = "form-group">
             <th><%= f.label :商品名 %></th>
             <th><%= f.text_field :name, size: "30×5", placeholder: "商品名"%></th>
           </div>
          </tr>
          <tr>
            <div class = "form-group">
             <th><%= f.label :商品説明 %></th>
             <th><%= f.text_area :description, size: "30×5", placeholder: "ここに説明を記述します"%></th>
            </div>
          </tr>
          
        </table>
       <% end %>
    </div>
    </div>
</div>


