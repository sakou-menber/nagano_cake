<div class="container">
  <div class= "row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h4>注文履歴詳細</h4>
    </div>
  </div>
</div>

<tr>
  <p>購入者<%=link_to @order.shipping_name, admin_customer_path  %></p>
  <p>注文日<%= @order.created_at.strftime('%Y/%m/%d')%></p>
  <p>配送先  〒<%= @order.shipping_postal_code%><br>
     <%= @order.shipping_name%>
  </p>

  <p>支払方法<%= @order.payment_method_i18n %></p>
</tr>

<div class= "row">

  <div class="col-sm-10 px-sm-0 mx-auto mb-5">
   <table class="col-sm-10 px-sm-0 mx-auto mb-5">
    <thead class= "table-secondary">


      <tr>
        <th>商品名</th>
        <th>単価(税込）</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
     <% total = 0 %>
     <% @order.order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.with_tax_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.amount * order_detail.item.with_tax_price %></td>
      　　<% total += order_detail.amount * order_detail.item.with_tax_price %>
    </tr>
    <% end %>
    </tbody>

    <tr>
      <p>商品合計<%= total %></p>
      <p>送料<%= @order.postage %></p>
      <p>請求金額合計 <%= @order.total_payment %><br>
      </p>
    </tr>


