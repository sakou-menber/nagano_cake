<h4>会員の情報編集</h4>

 <%= form_with model: @customer, url: customers_information_path, local: true do |f| %>

  <div class= "field">
     <%= f.label :氏名%>
     <%= f.text_field :last_name %>
  </div>

  <div class= "field">
    <%= f.text_field :first_name %>
  </div>

  <div class= "field">
     <%= f.label :フリガナ%>
     <%= f.text_field :last_name_kana %>
  </div>

  <div class= "field">
     <%= f.text_field :first_name_kana %>
  </div>

  <div class= "field">
    <%= f.label :郵便番号%>
    <%= f.text_field :postal_code %>
  </div>

  <div class= "field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class= "field">
    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class= "field">
    <%= f.label :メールアドレス %>
    <%= f.text_field :email %>
  </div>

  <div class= "form-action" >
    <th><%= f.submit "変更を保存", class:"btn btn-success"%> </th>
  </div>


  <div class= "form-action" >
    <%= link_to "退会する", customers_check_path, class: "btn btn-danger ms-3" %>
 </div>

<% end %>

