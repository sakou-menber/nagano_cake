<div class="container">
  <div class="row mt-3">
    <div class="col-sm-4 px-sm-0 offset-sm-1">
       <h2>ログイン</h2>
    </div>
  </div>
  <div class= "row my-3">
    <div class="col-sm-4 px-sm-0 offset-sm-1">
       会員の方はこちらからログイン
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-sm-2 px-sm-0 offset-sm-1">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-sm-3 px-sm-0">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-2 px-sm-0 offset-sm-1">
     <%= f.label :パスワード %>
    </div>
    <div class="col-sm-3 px-sm-0">
     <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-primary px-4 mb-5" %>
  </div>
<% end %>

<p>会員登録がお済みでない方</p>
<%= render "public/shared/links" %>から新規登録を行なってください。
