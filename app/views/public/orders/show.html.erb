<div class="container">
  <div class= "row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h4>注文履歴詳細</h4>
    </div>
  </div>
</div>
<div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">
      <h5>注文情報</h5>
    </div>
    <div class= "row">

        <table class="table table-bordered">
          <tr>
            <th class= "table-active">注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d')%></td>
          </tr>
          <tr>
            <th class= "table-active">配送先</th>
            <td><%= @order.shipping_address%></td>
          </tr>
          <tr>
            <th class= "table-active">支払方法</th>
            <td><%= @order.payment_method_i18n%></td>
          </tr>
    </div>

    </table>
     <h5>請求情報</h5>



        <table class="table table-bordered">
          <tr>
           <% total = 0 %>
            <th class= "table-active">商品合計</th>
            <td><%= @order.total_payment - @order.postage%></td>
          </tr>
          <tr>
            <th class= "table-active">配送料</th>
            <td><%= @order.postage%></td>
          </tr>
          <tr>
            <th class= "table-active">ご請求額</th>
            <td><%= @order.total_payment%></td>
          </tr>
       </table>

  <div class="row">
  <div class="col-sm-3 px-sm-0 offset-sm-1">
     <h5>注文内容</h5>
  </div>


  <table>
    <div class= "row">
    <thead class= "table-secondary">

      <tr>
        <th>商品</th>
        <th>単価(税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
     <% total = 0 %>
     <% @order.order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.with_tax_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.amount * order_detail.item.with_tax_price %></td>
      　　<% total += order_detail.amount * order_detail.item.with_tax_price %>
    </tr>
    <% end %>
  </tbody>
</table>